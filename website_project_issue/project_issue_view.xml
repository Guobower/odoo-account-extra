<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>




        <template id="upload_attachement" name="Upload attachement" >
                  <t t-call="website.layout">
                  <t t-set="additional_title">Upload attachement</t>
                        <div id="wrap">
                            <div class="container">
                                <h1 class="text-center">
                                    Send in a voucher
                                </h1>
                                <h2 t-if="issue" class="text-center text-muted">
                                    <span t-field="issue.name"/>
                                </h2>

                                <div class="row">
                                    <section id="forms">
                                        <!-- TODO Multilingual form action support ? -->
                                        <form class="form-horizontal mt32" method="post" enctype="multipart/form-data">

                                       

                                                <!-- Form Name -->
                                                <legend>Form Name</legend>

                                                <!-- Text input-->
                                                <div t-attf-class="form-group #{error.get('name') and 'has-error' or ''}">
                                                    <label class="col-md-3 col-sm-4 control-label" for="name">Issue</label>
                                                    <div class="col-md-7 col-sm-8">
                                                        <input type="text" t-att-value="default.get('name')" class="form-control" name="name" required="True"/>
                                                        <p class="help-block">Give us a hint of what this is about</p>
                                                    </div>
                                                </div>
                                                <!-- File Button --> 
                                                <div t-attf-class="form-group #{error.get('uname') and 'has-error' or ''}">
                                                    <label class="col-md-3 col-sm-4 control-label" for="name">Voucher</label>
                                                    <div class="col-md-7 col-sm-8">
                                                        <input type="file" t-att-value="default.get('ufile')" class="form-control" name="name" required="True"/>
                                                        <p class="help-block">File to upload</p>
                                                    </div>
                                                </div>
                                                <!-- Textarea -->
                                                <div t-attf-class="form-group #{error.get('description') and 'has-error' or ''}">
                                                    <label class="col-md-3 col-sm-4 control-label" for="description">Description</label>
                                                    <div class="col-md-7 col-sm-8">
                                                        <textarea id="description" name="description">Extra information</textarea>
                                                        <p class="help-block">Extra information</p>
                                                    </div>
                                                </div>
                                                                            <div class="form-group">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
<fieldset>

<!-- Form Name -->
<legend>Form Name</legend>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="name">Issue</label>
  <div class="controls">
    <input id="name" name="name" placeholder="issue name" class="input-xlarge" type="text"/>
    <p class="help-block">Give us a hint of what this is about</p>
  </div>
</div>

<!-- File Button --> 
<div class="control-group">
  <label class="control-label" for="ufile">Voucher</label>
  <div class="controls">
    <input id="ufile" name="ufile" class="input-file" type="file"/>
  </div>
</div>

<!-- Textarea -->
<div class="control-group">
  <label class="control-label" for="description">Description</label>
  <div class="controls">                     
    <textarea id="description" name="description">Extra information</textarea>
  </div>
</div>

</fieldset>
                                   


<!-- Button (Double) -->
<div class="control-group">
  <label class="control-label" for="send"></label>
  <div class="controls">
    <submit id="send" name="send" class="btn btn-success">Send</submit>
    <submit id="cancel" name="cancel" class="btn btn-inverse">Cancel</submit>
  </div>
</div>
                                        </form>
                                    </section>
                                </div> <!-- row -->
                            </div>  <!-- container -->
                        </div>  <!-- wrap -->
                  </t>
        </template>      


    </data>
</openerp>

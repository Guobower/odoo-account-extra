<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>




        <template id="upload_attachement" name="Upload attachement" >
                  <t t-call="website.layout">
                  <t t-set="additional_title">Send in a voucher</t>
                        <div id="wrap">
                            <div class="container">
                                <h1 class="text-center">
                                    Send in a voucher
                                </h1>
                                <h2 t-if="issue" class="text-center text-muted">
                                    <span t-field="issue.name"/>
                                </h2>

                                <div class="row">
                                    <section id="forms" class="col-xs-10 col-md-3 col-md-offset-4">
                                        <!-- TODO Multilingual form action support ? -->
                                        <form class="mt32" method="post" enctype="multipart/form-data">

                                                <!-- Text input-->
                                                <div t-attf-class="form-group #{error.get('name') and 'has-error' or ''}">
                                                    <label for="name">Issue</label>
                                                    <input type="text" t-attf-value="#{issue and issue.name or ''}" placeholder="Give us a hint of what this is about" class="form-control" name="name" />
                                                  
                                                </div>
                                                <!-- File Button --> 
                                                <t t-if="attachements">
                                                    <b>Vouchers</b><br/>
                                                    <t t-foreach="attachements" t-as="a">
                                                        <a t-attf-href="/file/#{a.id}" t-field="a.name"/>
                                                    </t>
                                                </t>
                                                <t t-if="not attachements">                                                                                    
                                                    <div t-attf-class="form-group #{error.get('ufile') and 'has-error' or ''}">
                                                        <label for="name">Voucher</label>
                                                        <input type="file" name="ufile" placeholder="File to upload pdf/jpg/png" required="True"/>
                                                        <p class="help-block">File to upload</p>
                                                    </div>
                                                </t>
                                                <!-- Textarea -->
                                                <div t-attf-class="form-group #{error.get('description') and 'has-error' or ''}">
                                                    <label for="description">Description</label>
                                                    <textarea id="description" name="description" placeholder="Extra information" t-attf-value="#{issue and issue.description or ''}" class="form-control"><t t-esc="issue and issue.description or ''"/></textarea>
                                                    
                                                </div>
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                            
                                                    
                                        </form>
                                    </section>
                                </div> <!-- row -->
                            </div>  <!-- container -->
                        </div>  <!-- wrap -->
                  </t>
        </template>      


    </data>
</openerp>

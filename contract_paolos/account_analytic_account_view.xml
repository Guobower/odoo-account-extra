<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>



    <record model="ir.ui.view" id="project_issue_form_view">
            <field name="name">project.issue.form.inherit</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//header/field[@name='stage_id']" position="before">
                        <button name="create_invoice_customer" string="Customer Invoice" type="object" groups="base.group_user"/>
                        <button name="create_invoice_supplier" string="Supplier Invoice" type="object" groups="base.group_user"/>
                        <button name="create_move" string="Move" type="object" groups="base.group_user"/>
                        <button name="create_bank" string="Bank Statement" type="object" groups="base.group_user"/>
                </xpath>
            </field>
    </record>
                
        

    </data>
</openerp>
